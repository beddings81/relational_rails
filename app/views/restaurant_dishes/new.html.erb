<form action="/restaurants/<%= @restaurant.id %>/dishes" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>New Dish Name:</p>
  <input id="name" type="text" name="dish[name]" /><br/>
  <p>New Dish Price:</p>
  <input id="price" type="integer" name="dish[price]" /><br/>
  <p>Hot? (T/F)</p>
  <input id="hot?" type="boolean" name="dish[hot]" /><br/>
  <input type="hidden" name="dish[restaurant_id]" value="<%= @restaurant.id %>">
  <input type='submit' value="Create Dish"/>
</form>